<%- include('partials/_header') %>

<!-- Hero Section -->
<header class="hero">
  <div class="hero-content">
    <h1>Add New Post</h1>
    <div class="subheading">Share your thoughts with the world</div>
  </div>
</header>

<!-- Main Content -->
<div class="form-container">
  <form>
    <div class="form-group">
      <label for="title">Post Title</label>
      <input type="text" class="form-control" id="title" name="title" placeholder="Enter post title" required>
    </div>
    
    <div class="form-group">
      <label for="subtitle">Subtitle</label>
      <input type="text" class="form-control" id="subtitle" name="subtitle" placeholder="Enter post subtitle">
    </div>
    
    <div class="form-group">
      <label for="content">Content</label>
      <textarea class="form-control" id="content" name="content" placeholder="Write your post content here..." required></textarea>
    </div>
    
    <div class="form-group">
      <label for="author">Author</label>
      <input type="text" class="form-control" id="author" name="author" placeholder="Your name" required>
    </div>
    
    <button type="submit" class="btn">Publish Post</button>
  </form>
</div>

<%- include('partials/_footer') %> 